@model FaceBook.Models.Role

@{
    ViewData["Title"] = "Delete";
}


<div>
    <div class="row">
        <div class="col-md-12">
            <h3 style="font-size:30px; font-weight:bold; margin-bottom:20px">Are you sure you want to delete this?</h3>
            <hr />
        </div>
        <div style="margin-top:10px;font-size:20px;margin-bottom:20px" class="col-sm-3">
            @Html.DisplayNameFor(model => model.Title) : 
        </div>
        <div style="margin-top:10px;font-size:20px;margin-bottom:20px" class="col-sm-9">
            @Html.DisplayFor(model => model.Title)
        </div>
        <div style="font-size:20px;margin-bottom:20px" class="col-sm-3">
            @Html.DisplayNameFor(model => model.Description) :
        </div>
        <div style="font-size: 20px; margin-bottom: 20px" class="col-sm-9">
            @Html.DisplayFor(model => model.Description)
        </div>
    </div>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> 
        <a class="btn btn-light" asp-action="Index">Back to List</a>
    </form>
</div>
