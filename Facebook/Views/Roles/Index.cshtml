@model IEnumerable<FaceBook.Models.Role>

@{
    ViewData["Title"] = "Index";
    LayoutUserDto layoutUserDto = (LayoutUserDto)ViewData["LayoutData"];
}


@if (layoutUserDto.actions.Where(x => x.Url == "/Roles/Create").Any())
{
    <p>
        <a class="btn btn-success" asp-action="Create">Create New</a>
    </p>
}

<table style="margin-top:20px" class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @if (layoutUserDto.actions.Where(x => x.Url == "/Roles/Edit").Any())
                    {
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a>
                    }
                    @if (layoutUserDto.actions.Where(x => x.Url == "/Roles/Delete").Any())
                    {
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
